// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
      "hyprland/workspaces",
      "hyprland/window"
    ],
    "modules-center": [
      "clock",
      "power-profiles-daemon"
    ],
    "modules-right": [
      "tray", 
      "custom/volume",
      "network",
      "cpu",
      "memory",
      "custom/powermenu"
    ],

    "tray": {
      "icon-size": 20,
      "spacing": 12
        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }N
    },
    "clock": {
      "timezone": "Asia/Singapore",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "format-alt": "{:%Y-%m-%d}",
      "format": "{:%I:%M %p}" // 12-hour format with AM/PM
    },

    "cpu": {
      "format": "CPU {usage}%",
      "tooltip": false
    },
    "memory": {
      "format": "RAM {}%"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "NORMAL",
        "performance": "LEZ GO",
        "balanced": "BALANCE",
        "power-saver": "ECO"
      }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) ",
        "format-ethernet": "ETHERNET",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "NO INTERNET",
        // "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // Display a bar with volume percentage
        "format": "{icon} {volume_bar} {volume}% ",
        "format-muted": "ÔÄ¶ Muted",
        "format-icons": {
          "headphones": "ÔÄ•",
          "default": ["ÔÄß", "SOUND"]
        },
        "on-scroll-up": "pamixer --increase 5",
        "on-scroll-down": "pamixer --decrease 5",
        "on-click": "pavucontrol",
        // Custom scripts or bar representation will be handled by a script below
        "exec": "~/dotfiles/waybar/volume_bar.sh",
        "return-type": "json"

    },
    "custom/volume": {
      "interval": 1,
      "exec": "~/dotfiles/waybar/volume_bar.sh",
      "return-type": "json",
      "on-click": "hyprctl dispatch exec '[float;move toworkspace current] pavucontrol'",
      "on-scroll-up": "pamixer --increase 5",
      "on-scroll-down": "pamixer --decrease 5"
    },

    "custom/media": {
      "format": "{icon} {text}",
      "return-type": "json",
      "max-length": 40,
      "format-icons": {
        "spotify": "ÔÜº",
        "default": "üéú"
      },
      "escape": true,
      "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/powermenu": {
      "format": "‚èª",
      "tooltip": "Power Menu",
      "on-click": "~/dotfiles/waybar/power_menu.sh"
    }

}
